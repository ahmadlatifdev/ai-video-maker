// automation.js
import express from "express";
import cors from "cors";

const app = express();

// ==================
// MIDDLEWARE
// ==================
app.use(cors());
app.use(express.json({ limit: "10mb" }));

// ==================
// HEALTH CHECK (REQUIRED FOR DASHBOARD)
// ==================
app.get("/health", (req, res) => {
  res.status(200).json({
    status: "ok",
    service: "ai-video-maker",
    port: process.env.PORT || 8080,
    time: new Date().toISOString()
  });
});

// ==================
// ROOT (OPTIONAL SAFETY)
// ==================
app.get("/", (req, res) => {
  res.status(200).json({
    message: "BossMind AI Video Maker backend is running"
  });
});

// ==================
// PLACEHOLDER API (SAFE)
// ==================
app.post("/api/test", (req, res) => {
  res.status(200).json({
    received: true,
    body: req.body || null
  });
});

// ==================
// SERVER START
// ==================
const PORT = process.env.PORT || 8080;

app.listen(PORT, () => {
  console.log(`BossMind Automation running on port ${PORT}`);
});
